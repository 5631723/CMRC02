@using CMRC02.Models
@{
    ViewBag.Title = "OrderList";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var state = 0;
}

<table height="100%" align="left" cellspacing="0" cellpadding="0" width="100%" border="0">
    <tbody>
        <tr valign="top">
            <td nowrap="">
                <br>
                <form name="ctl01" method="post" action="OrderList.aspx" id="ctl01">

                    <img align="left" width="24" src="/Content/images/1x1.gif">
                    <table cellspacing="0" cellpadding="0" width="100%" border="0">
                        <tbody>
                            <tr>
                                <td class="ContentHead">
                                    <img align="left" height="32" width="60" src="/Content/images/1x1.gif">账户交易记录
                                    <br>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <img align="left" height="4" width="110" src="/Content/images/1x1.gif"> <font color="red">
                        <span id="MyError" class="ErrorText"></span>
                    </font>
                    <br>
                    <img align="left" height="15" width="84" src="/Content/images/1x1.gif" border="0">
                    <table height="100%" cellspacing="0" cellpadding="0" width="550" border="0">
                        <tbody>
                            <tr valign="top">
                                <td width="100%">
                                    <table cellspacing="0" cellpadding="4" rules="cols" border="1" id="MyList" style="border-color:Black;font-family:Verdana;font-size:8pt;width:90%;border-collapse:collapse;">
                                        <tbody>
                                            <tr class="CartListHead">
                                                <td>订单号</td>
                                                <td>订单日期</td>
                                                <td>订单总和</td>
                                                <td>出货日期</td>
                                                <td>详细信息</td>
                                            </tr>

                                            @foreach (OrderList item in ViewBag.list)
                                            {
                                                <tr class="@(state % 2 == 0 ? "CartListItem" :"CartListItemAlt")">
                                                    <td>@item.OrderID</td>
                                                    <td>@item.OrderDate.ToShortDateString()</td>
                                                    <td>@string.Format("{0:c}", item.SumTotal)</td>
                                                    <td>@item.ShipDate.ToShortDateString()</td>
                                                    <td><a href="@Url.Action("OrderDetails","OrderDetails",new {id=item.OrderID})">详细信息</a></td>
                                                </tr>

                                                state++;
                                            }



                                            <tr class="CartListFooter">
                                                <td>&nbsp;</td>
                                                <td>&nbsp;</td>
                                                <td>&nbsp;</td>
                                                <td>&nbsp;</td>
                                                <td>&nbsp;</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </form>
            </td>
        </tr>
    </tbody>
</table>